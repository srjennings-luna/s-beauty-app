[
  {
    "fields": [
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "description": "e.g., \"Seeking Beauty in Vatican City\"",
        "name": "title",
        "type": "string",
        "title": "Full Title"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "description": "e.g., \"Vatican City\" (shown in navigation)",
        "name": "shortTitle",
        "type": "string"
      },
      {
        "initialValue": 1,
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              },
              {
                "flag": "min",
                "constraint": 1
              }
            ],
            "level": "error"
          }
        ],
        "name": "season",
        "type": "number",
        "title": "Season Number"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              },
              {
                "flag": "min",
                "constraint": 1
              }
            ],
            "level": "error"
          }
        ],
        "name": "episodeNumber",
        "type": "number"
      },
      {
        "rows": 4,
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "description": "Brief description of the episode (2-3 sentences)",
        "name": "summary",
        "type": "text",
        "title": "Episode Summary"
      },
      {
        "description": "e.g., \"Vatican City, Rome, Italy\"",
        "name": "locationLabel",
        "type": "string"
      },
      {
        "options": {
          "hotspot": true
        },
        "description": "Main image for the episode (1200-1600px wide, JPEG)",
        "name": "heroImage",
        "type": "image"
      },
      {
        "name": "durationMinutes",
        "type": "number",
        "title": "Duration (minutes)"
      },
      {
        "description": "e.g., \"January 19, 2026\"",
        "name": "airDate",
        "type": "string"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "uri",
                "constraint": {
                  "options": {
                    "scheme": [
                      "/^http$/",
                      "/^https$/"
                    ],
                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "description": "Link to watch on EWTN+",
        "name": "ewtnPlusUrl",
        "type": "url",
        "title": "EWTN+ URL"
      },
      {
        "initialValue": false,
        "description": "Toggle on when episode is available to watch",
        "name": "isReleased",
        "type": "boolean",
        "title": "Is Released?"
      },
      {
        "of": [
          {
            "fields": [
              {
                "name": "name",
                "type": "string"
              },
              {
                "name": "role",
                "type": "string"
              }
            ],
            "type": "object"
          }
        ],
        "name": "featuredExperts",
        "type": "array"
      },
      {
        "description": "Add artworks featured in this episode",
        "of": [
          {
            "to": [
              {
                "type": "artwork"
              }
            ],
            "type": "reference",
            "title": "Reference to artwork / location"
          }
        ],
        "name": "artworks",
        "type": "array"
      },
      {
        "of": [
          {
            "fields": [
              {
                "rows": 2,
                "name": "question",
                "type": "text",
                "title": "Reflection Question"
              },
              {
                "options": {
                  "list": [
                    {
                      "title": "Individual",
                      "value": "individual"
                    },
                    {
                      "title": "Family",
                      "value": "family"
                    },
                    {
                      "title": "Group",
                      "value": "group"
                    }
                  ]
                },
                "name": "suggestedUse",
                "type": "string"
              }
            ],
            "type": "object"
          }
        ],
        "name": "reflections",
        "type": "array",
        "title": "Episode Reflections"
      }
    ],
    "name": "episode",
    "type": "document"
  },
  {
    "fields": [
      {
        "options": {
          "list": [
            {
              "title": "Sacred Art",
              "value": "sacred-art"
            },
            {
              "title": "Architecture",
              "value": "architecture"
            },
            {
              "title": "Workshop/Studio",
              "value": "workshop"
            },
            {
              "title": "Cultural",
              "value": "cultural"
            },
            {
              "title": "Landscape",
              "value": "landscape"
            }
          ],
          "layout": "radio"
        },
        "initialValue": "sacred-art",
        "description": "What type of location is this?",
        "name": "locationType",
        "type": "string"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "description": "e.g., \"Pietà\" or \"Florence Art School\"",
        "name": "title",
        "type": "string"
      },
      {
        "description": "e.g., \"Michelangelo Buonarroti\" (optional for non-art locations)",
        "hidden": "conditional",
        "name": "artist",
        "type": "string",
        "title": "Artist / Creator"
      },
      {
        "description": "e.g., \"1498-1499\" or \"c. 1600\"",
        "name": "year",
        "type": "string",
        "title": "Year / Date Range"
      },
      {
        "options": {
          "hotspot": true
        },
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "description": "High quality image (1200-1600px wide, JPEG, under 500KB)",
        "name": "image",
        "type": "image"
      },
      {
        "rows": 3,
        "description": "Short description shown in cards",
        "name": "description",
        "type": "text",
        "title": "Brief Description"
      },
      {
        "rows": 5,
        "description": "Detailed history or background shown in the details panel",
        "name": "historicalSummary",
        "type": "text",
        "title": "Historical Context / About"
      },
      {
        "description": "For Sacred Art locations",
        "fields": [
          {
            "rows": 3,
            "description": "The scripture text (without quotes)",
            "name": "verse",
            "type": "text",
            "title": "Scripture Verse"
          },
          {
            "description": "e.g., \"Matthew 23:37\" or \"Lamentations 1:12\"",
            "name": "reference",
            "type": "string",
            "title": "Scripture Reference"
          }
        ],
        "hidden": "conditional",
        "name": "scripturePairing",
        "type": "object"
      },
      {
        "description": "A meaningful quote about this location",
        "fields": [
          {
            "rows": 3,
            "description": "The quote (without quotes)",
            "name": "text",
            "type": "text",
            "title": "Quote Text"
          },
          {
            "description": "e.g., \"Dr. Elizabeth Lev\" or \"Local Artisan\"",
            "name": "attribution",
            "type": "string"
          }
        ],
        "hidden": "conditional",
        "name": "quote",
        "type": "object",
        "title": "Featured Quote"
      },
      {
        "description": "Questions for contemplation",
        "of": [
          {
            "type": "string"
          }
        ],
        "name": "reflectionQuestions",
        "type": "array"
      },
      {
        "description": "e.g., \"St. Peter's Basilica\" or \"Via Margutta\"",
        "name": "locationName",
        "type": "string"
      },
      {
        "description": "e.g., \"Vatican City\" or \"Rome\"",
        "name": "city",
        "type": "string"
      },
      {
        "initialValue": "Italy",
        "name": "country",
        "type": "string"
      },
      {
        "description": "For the Artwalk map. Tip: Right-click in Google Maps → \"What's here?\" to get coordinates",
        "fields": [
          {
            "description": "e.g., 41.9022",
            "name": "lat",
            "type": "number",
            "title": "Latitude"
          },
          {
            "description": "e.g., 12.4568",
            "name": "lng",
            "type": "number",
            "title": "Longitude"
          }
        ],
        "name": "coordinates",
        "type": "object",
        "title": "Map Coordinates"
      },
      {
        "initialValue": 1,
        "description": "Order within the episode (1, 2, 3...)",
        "name": "order",
        "type": "number",
        "title": "Display Order"
      }
    ],
    "name": "artwork",
    "type": "document",
    "title": "Artwork / Location"
  }
]